<!DOCTYPE html>
<html>
  <head>
    <title>Pragprog Books Online Store</title>
    <%= stylesheet_link_tag "scaffold" %>
    <%= stylesheet_link_tag "depot", :media => "all" %>
    <%= javascript_include_tag :defaults %>
    <%= csrf_meta_tag %>
  </head>
  <body id="store" >
    <div id="banner" >
      <%= image_tag("/images/logo.png") %>
      <%= @page_title || "Pragmatic Bookshelf" %>
    </div>
    <div id="columns" >
      <div id="side" >
      <% if @cart %>
<%= hidden_div_if(@cart.line_items.empty?, :id => "cart") do %>
<%= render @cart %>
<% end %>
<% end %>
        <a href="http://localhost:3000/" >Home</a><br />
        <a href="http://www..../faq" >Questions</a><br />
        <a href="http://www..../news" >News</a><br />
        <a href="http://www..../contact" >Contact</a><br />
        <br/>
        <br/>
        <a href="http://localhost:3000/orders" >Orders</a><br />
        <a href="http://localhost:3000/products" >Products</a><br />
        <a href="http://www..../news" >Users</a><br />
 <p class="notice"><%= notice %></p>
       <p class="alert"><%= alert %></p>

      </div>
      <div id="main" >
         <div id="user_nav">
<% if user_signed_in? %>
      Signed in as <%= current_user.email %>. This cannot be cheese?
<%= link_to "Sign out", destroy_user_session_path, :method => :delete %>
<% else %>
  <%= link_to 'Register', new_user_registration_path %>
      or <%= link_to 'Sign in', new_user_session_path %>
      <% end %>
    </div>
        <%= yield %>
      </div>
    </div>
  </body>
</html>